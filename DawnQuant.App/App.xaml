<Application x:Class="DawnQuant.App.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:DawnQuant.App"
             StartupUri="LoginWindow.xaml">
    <Application.Resources>
        <ControlTemplate TargetType="Button" x:Key="IconButton">
            <ContentControl  >
                <TextBlock  FontSize="{TemplateBinding FontSize}" x:Name="txtContent" FontFamily="Assets/Fonts/#iconfont" 
                            Foreground="{TemplateBinding Foreground}" 
                            Margin="{TemplateBinding Margin}"
                            Padding="{TemplateBinding Padding}"
                            Text="{TemplateBinding Content}"
                            HorizontalAlignment="Center"  
                            VerticalAlignment="Center" >
                </TextBlock>
            </ContentControl>
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter  Property="Foreground" Value="Red"  TargetName="txtContent" ></Setter>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>

    </Application.Resources>
</Application>
